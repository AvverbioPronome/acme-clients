  <h2 class="pt-4 pb-4 drop-shadow" id="{{sectionid}}"><a href="#{{sectionid}}">{{ title }}</a></h2>

  <div class="container  mx-auto ">
    {%- for item in list -%}

    <div class="shadow-lg p-2 mt-2 max-w-xl bg-gray-50">
      <h3 class="p-2 text-slate-800">{{ item.title }}</h3>
      
      {% if item.description %}
        <p class="p-2 text-slate-600"> {{ item.description }} </p>
      {% endif %}
      
      <p class="pl-2 text-sm">
      <a href="{{ item.website }}" target="_blank" title="Website">{{ item.website }} </a>
      <br>
      Docs: <a href="{{ item.docs }}" target="_blank" title="Documentation">{{item.docs}}</a>
      <br>
      Community: <a href="{{ item.community }}" target="_blank" title="Community">{{item.community}}</a>

      <div class="m-2">
      <p> {%- for c in item.categories -%}
        <span class="text-slate-400 p-1 rounded bg-slate-100 mr-2 lowercase">{{ c }}</span>
        {%- endfor -%}
      </p>

      <p class="mt-2"> {%- for c in item.os -%}
        <span class="text-sky-400 p-1 rounded bg-gray-200 mr-2 lowercase">{{ c }}</span>
        {%- endfor -%}
      </p>
      <p class="mt-2"> 
        {%- for b in item.badges -%}
        <img src="{{b}}" class="inline-block mr-2"/>
        {%- endfor -%}
      </p>
    </div>
  </div>
    
    {%- endfor -%}
  </div>
